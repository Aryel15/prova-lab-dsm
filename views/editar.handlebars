<div class="container">
    <br>
    <div class="d-flex justify-content-between container align-items-center">
        <h1>Tela de Edição</h1>
        <a href="/" class="btn btn-secondary">Ver Clientes</a>
    </div>
    {{#each cliente}}
        {{#dataValues}}
        <form action="/editar/{{id}}" method="post">
            <div class="form-group">
                <label for="nome">Nome:</label>
                <input type="text" class="form-control" id="nome" placeholder="Digite o nome" name="nome" value="{{nome}}">
            </div>
            <div class="form-group">
                <label for="endereco">Endereço:</label>
                <input type="text" class="form-control" id="endereco" placeholder="Digite o endereço" name="endereco" value="{{endereco}}">
            </div>
            <div class="form-group">
                <label for="bairro">Bairro:</label>
                <input type="text" class="form-control" id="bairro" placeholder="Digite o bairro" name="bairro" value="{{bairro}}">
            </div>
            <div class="form-group">
                <label for="cep">CEP:</label>
                <input type="text" class="form-control" id="cep" placeholder="Digite o CEP" name="cep" value="{{cep}}">
            </div>
            <div class="form-group">
                <label for="cidade">Cidade:</label>
                <input type="text" class="form-control" id="cidade" placeholder="Digite a cidade" name="cidade" value="{{cidade}}">
            </div>
            <div class="form-group">
                <label for="estado">Estado:</label>
                <input type="text" class="form-control" id="estado" placeholder="Digite o estado" name="estado" value="{{estado}}">
            </div>            
            <button type="submit" class="btn btn-primary">Salvar</button>
        </form>
        {{/dataValues}}
    {{/each}}
</div>
